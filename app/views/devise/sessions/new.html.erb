<h2 class="text-3xl font-bold text-center text-green-800">Enter the Dungeon</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "max-w-xl mx-auto mt-8" }) do |f| %>
  <div class="field">
    <%= f.label :email, class: "block text-lg font-medium text-gray-700" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 block w-full rounded-md bg-gray-200 border-transparent focus:border-green-500 focus:bg-white focus:ring-0" %>
  </div>

  <div class="field mt-4">
    <%= f.label :password, class: "block text-lg font-medium text-gray-700" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "mt-1 block w-full rounded-md bg-gray-200 border-transparent focus:border-green-500 focus:bg-white focus:ring-0" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field mt-4">
      <%= f.check_box :remember_me, class: "rounded border-gray-300 text-green-600 shadow-sm focus:border-green-300 focus:ring focus:ring-green-200 focus:ring-opacity-50" %>
      <%= f.label :remember_me, class: "text-lg font-medium text-gray-700" %>
    </div>
  <% end %>

  <div class="actions mt-6">
    <%= f.submit "Log in", class: "bg-green-600 text-center hover:bg-green-800 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
  </div>
  <%= render "devise/shared/links" %>
<% end %>


