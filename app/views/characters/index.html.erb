<h1 class="text-4xl font-bold text-center my-8">Character Roster</h1>

<div class="overflow-x-auto relative shadow-md sm:rounded-lg">
  <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
    <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
      <tr>
        <th scope="col" class="py-3 px-6 text-center">Name</th>
        <th scope="col" class="py-3 px-6 text-center">Level</th>
        <th scope="col" class="py-3 px-6 text-center">Race</th>
        <th scope="col" class="py-3 px-6 text-center">Class</th>
        <th scope="col" class="py-3 px-6 text-center">Strength</th>
        <th scope="col" class="py-3 px-6 text-center">Dexterity</th>
        <th scope="col" class="py-3 px-6 text-center">Constitution</th>
        <th scope="col" class="py-3 px-6 text-center">Intelligence</th>
        <th scope="col" class="py-3 px-6 text-center">Wisdom</th>
        <th scope="col" class="py-3 px-6 text-center">Charisma</th>
        <th scope="col" class="py-3 px-6 text-center">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @characters.each do |character| %>
        <tr class="bg-white border-b font-bold dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
          <td class="py-4 px-6 text-center"><%= character.name %></td>
          <td class="py-4 px-6 text-center"><%= character.level %></td>
          <td class="py-4 px-6 text-center"><%= character.race&.capitalize %></td>
          <td class="py-4 px-6 text-center"><%= character.char_class&.capitalize %></td>
          <td class="py-4 px-6 text-center"><%= character.strength %></td>
          <td class="py-4 px-6 text-center"><%= character.dexterity %></td>
          <td class="py-4 px-6 text-center"><%= character.constitution %></td>
          <td class="py-4 px-6 text-center"><%= character.intelligence %></td>
          <td class="py-4 px-6 text-center"><%= character.wisdom %></td>
          <td class="py-4 px-6 text-center"><%= character.charisma %></td>
          <td class="py-4 px-6 text-center">
            <%= link_to 'Show', character_path(character), class: "text-blue-600 hover:text-blue-700 dark:hover:text-blue-500" %>
            <%= link_to 'Level Up', edit_character_path(character), class: "text-yellow-500 hover:text-yellow-600 dark:hover:text-yellow-400 mx-2" %>
            <%= button_to 'Delete', character_path(character), method: :delete, data: { confirm: 'Are you sure?' }, form: { class: "inline" }, class: "text-red-600 hover:text-red-700 dark:hover:text-red-500" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
