<!-- app/views/characters/edit.html.erb -->
<div class="container max-w-4xl mx-auto p-8 bg-opacity-70 text-gray-800 rounded-lg shadow-lg mt-10 space-y-6">
  <h1 class="text-3xl font-bold text-center mb-6 text-gray-800">Level Up Your Character</h1>
  <p class="text-xl text-center mb-4 text-gray-800">Current Level: <%= @character.level %></p>

  <%= form_for @character, html: { class: "space-y-4" } do |f| %>
    <% [:strength, :dexterity, :constitution, :intelligence, :wisdom, :charisma].each do |stat| %>
      <div class="flex flex-row items-center justify-between">
        <div class="flex justify-end items-center w-1/3 pr-2">
          <label for="character_<%= stat %>" class="font-semibold text-lg">
            <%= stat.to_s.capitalize %>
          </label>
          <span>:</span>
        </div>
        <%= f.number_field stat, min: @character.send(stat), max: @character.send(stat) + 3, step: 1, 
            class: "form-input block w-1/2 px-3 py-2 bg-gray-50 text-gray-800 rounded-md shadow-sm border border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
      </div>
    <% end %>

    <%= f.submit "Commit Points and Level Up", class: "w-full  px-6 py-2 bg-blue-600 hover:bg-blue-700 rounded-md text-white font-bold mt-4" %>
  <% end %>
</div>
